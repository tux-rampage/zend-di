<?xml version="1.0"?>
<ruleset name="PHPCS Coding Standards for ZendCodingStandard"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/squizlabs/php_codesniffer/phpcs.xsd">
    <description>The coding standard for ZendFramework itself.</description>

    <arg name="basepath" value="."/>
    <arg name="cache" value=".phpcs-cache"/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="80"/>

    <rule ref="ZendCodingStandard"/>

    <file>src</file>
    <file>test</file>

    <exclude-pattern><![CDATA[*/test/_files/*]]></exclude-pattern>
</ruleset>
